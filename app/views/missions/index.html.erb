<p id="notice"><%= notice %></p>

<h1>Missions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Instructions</th>
      <th>Duration</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission[:title] %></td>
        <td><%= mission[:instructions] %></td>
        <td><%= mission[:duration] %></td>
        <td><%= mission[:category] %></td>
        <td><%= link_to 'Show', mission_path(mission[:id]) %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission[:id]) %></td>
        <td><%= link_to 'Destroy', mission_path(mission[:id]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %>
